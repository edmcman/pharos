                                                                                                            (VFTable=AncestorVFTable;VFTable=DerivedVFTable),
                                                                                                            reasonClassHasUnknownBase_C(DerivedClass, AncestorVFTable, DerivedVFTable, Entry, Method, AncestorClass, AncestorConstructor, DerivedConstructor),
